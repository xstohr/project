{% extends 'base.html.twig' %}

{% block body %}
    <div class="row" style="margin: 25px;">
        <h1>Articles</h1>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Created</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.createdAt }}</td>
                <td><a href="{{ path('app_main_editarticle') }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('delete_article') }}" class="btn btn-danger">Delete</a>
                    <a href="#" class="btn btn-secondary">Detail</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pt-10">
                <a href="{{ path('create_article') }}" class="btn btn-primary">Create article</a>
            </div>
        </div>
    </div>

{% endblock %}